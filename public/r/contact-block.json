{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "contact-block",
  "type": "registry:block",
  "title": "Contact Block",
  "description": "Contact form with animated contact info cards, working hours, and interactive icons",
  "registryDependencies": [
    "button",
    "card",
    "input",
    "label",
    "textarea"
  ],
  "dependencies": [
    "framer-motion",
    "lucide-react"
  ],
  "files": [
    {
      "path": "components/sections/shadcnui/contact-block.tsx",
      "content": "\"use client\";\n\nimport { Button } from \"@/components/ui/button\";\nimport { Card } from \"@/components/ui/card\";\nimport { Input } from \"@/components/ui/input\";\nimport { Label } from \"@/components/ui/label\";\nimport { Textarea } from \"@/components/ui/textarea\";\nimport { motion } from \"framer-motion\";\nimport { Mail, MapPin, Phone, Send } from \"lucide-react\";\n\nconst contactInfo = [\n  {\n    icon: Mail,\n    label: \"Email\",\n    value: \"hello@example.com\",\n    href: \"mailto:hello@example.com\",\n  },\n  {\n    icon: Phone,\n    label: \"Phone\",\n    value: \"+1 (555) 123-4567\",\n    href: \"tel:+15551234567\",\n  },\n  {\n    icon: MapPin,\n    label: \"Location\",\n    value: \"San Francisco, CA\",\n    href: \"#\",\n  },\n];\n\nexport function ContactBlock() {\n  return (\n    <section className=\"w-full\">\n      <div className=\"mx-auto w-full\">\n        <motion.div\n          initial={{ opacity: 0, y: -20 }}\n          whileInView={{ opacity: 1, y: 0 }}\n          viewport={{ once: true }}\n          transition={{ duration: 0.6 }}\n          className=\"mb-16 text-center\"\n        >\n          <h2 className=\"mb-4 text-4xl font-bold text-foreground md:text-5xl\">\n            Get In Touch\n          </h2>\n          <p className=\"mx-auto max-w-2xl text-lg text-muted-foreground\">\n            Have a project in mind? Let's discuss how we can work together\n          </p>\n        </motion.div>\n\n        <div className=\"grid gap-8 lg:grid-cols-2\">\n          {/* Contact Form */}\n          <motion.div\n            initial={{ opacity: 0, x: -30 }}\n            whileInView={{ opacity: 1, x: 0 }}\n            viewport={{ once: true }}\n            transition={{ duration: 0.6 }}\n          >\n            <Card className=\"border-border bg-card p-6 md:p-8\">\n              <form className=\"space-y-6\">\n                <div className=\"space-y-2\">\n                  <Label htmlFor=\"name\">Name</Label>\n                  <Input\n                    id=\"name\"\n                    placeholder=\"Your name\"\n                    className=\"bg-background\"\n                  />\n                </div>\n\n                <div className=\"space-y-2\">\n                  <Label htmlFor=\"email\">Email</Label>\n                  <Input\n                    id=\"email\"\n                    type=\"email\"\n                    placeholder=\"your.email@example.com\"\n                    className=\"bg-background\"\n                  />\n                </div>\n\n                <div className=\"space-y-2\">\n                  <Label htmlFor=\"subject\">Subject</Label>\n                  <Input\n                    id=\"subject\"\n                    placeholder=\"How can I help you?\"\n                    className=\"bg-background\"\n                  />\n                </div>\n\n                <div className=\"space-y-2\">\n                  <Label htmlFor=\"message\">Message</Label>\n                  <Textarea\n                    id=\"message\"\n                    placeholder=\"Tell me about your project...\"\n                    rows={5}\n                    className=\"resize-none bg-background\"\n                  />\n                </div>\n\n                <Button type=\"submit\" className=\"w-full gap-2\">\n                  Send Message\n                  <Send className=\"h-4 w-4\" />\n                </Button>\n              </form>\n            </Card>\n          </motion.div>\n\n          {/* Contact Info */}\n          <motion.div\n            initial={{ opacity: 0, x: 30 }}\n            whileInView={{ opacity: 1, x: 0 }}\n            viewport={{ once: true }}\n            transition={{ duration: 0.6 }}\n            className=\"space-y-6\"\n          >\n            {contactInfo.map((info, index) => (\n              <motion.div\n                key={index}\n                initial={{ opacity: 0, y: 20 }}\n                whileInView={{ opacity: 1, y: 0 }}\n                viewport={{ once: true }}\n                transition={{ delay: index * 0.1, duration: 0.5 }}\n              >\n                <Card className=\"group border-border bg-card p-6 transition-all duration-300 hover:border-primary/50\">\n                  <a href={info.href} className=\"flex items-start gap-4\">\n                    <motion.div\n                      whileHover={{ scale: 1.1, rotate: 5 }}\n                      transition={{ duration: 0.3 }}\n                      className=\"flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg bg-primary text-primary-foreground\"\n                    >\n                      <info.icon className=\"h-5 w-5\" />\n                    </motion.div>\n                    <div>\n                      <h3 className=\"mb-1 font-semibold text-foreground transition-colors group-hover:text-primary\">\n                        {info.label}\n                      </h3>\n                      <p className=\"text-muted-foreground\">{info.value}</p>\n                    </div>\n                  </a>\n                </Card>\n              </motion.div>\n            ))}\n\n            <Card className=\"border-border bg-card p-6 md:p-8\">\n              <h3 className=\"mb-4 text-xl font-semibold text-foreground\">\n                Working Hours\n              </h3>\n              <div className=\"space-y-3 text-muted-foreground\">\n                <div className=\"flex justify-between\">\n                  <span>Monday - Friday</span>\n                  <span className=\"font-medium\">9:00 AM - 6:00 PM</span>\n                </div>\n                <div className=\"flex justify-between\">\n                  <span>Saturday</span>\n                  <span className=\"font-medium\">10:00 AM - 4:00 PM</span>\n                </div>\n                <div className=\"flex justify-between\">\n                  <span>Sunday</span>\n                  <span className=\"font-medium\">Closed</span>\n                </div>\n              </div>\n            </Card>\n          </motion.div>\n        </div>\n      </div>\n    </section>\n  );\n}\n",
      "type": "registry:block",
      "target": "components/sections/shadcnui/contact-block"
    }
  ]
}